  "container_vars": [
    {
      "name": "container_id",
      "options": "string",
      "notes": "Must be unique to the page. While not always required some components do need them to function correctly."
    },
    {
      "name": "container_background",
      "options": "{bg-light, bg-dark, bg-gradient-primary, bg-gradient-secondary, etc...}",
      "notes": "Uses a set of pre-defined colours and gradients."
    },
    {
      "name": "container_text_align",
      "options": "{left, center}",
      "notes": "Controls the text alignment of container and its children. It does not control any other alignment styling like floating right or vertical alignment."
    },
    {
      "name": "container_class",
      "options": "string",
      "notes": "Mianly used to create a modified version of a container, i.e. <strong>container--outer</strong>. But can also be used to add in utility classes to change the behavour and look of a component. For example <strong>mb-0</strong> can remove the margin bottom of the container."
    },
    {
      "name": "container_header_content",
      "options": "html",
      "notes": "Should mainly contain stuff like heading and straplines."
    },
    {
      "name": "container_footer_content",
      "options": "html",
      "notes": "Should mainly contain call to actions and buttons."
    },
    {
      "name": "container_no_animate",
      "options": "{yes,no}",
      "notes": "Prevents the container being loaded in with animation, so it will not fade in or move up but be static on the page at all times."
    }
  ],
